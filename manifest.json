{
  "manifest_version": 3,
  "name": "GPT Translation Extension",
  "version": "1.0",
  "description": "Translate the current Chrome tab using GPT.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
